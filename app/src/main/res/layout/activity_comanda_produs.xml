<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularAdaugare.ComandaProdusActivity"
    android:background="@color/goodYellow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewGeneric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toTopOf="@id/textViewNume"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/genereic_laptop_true" />

            <TextView
                android:id="@+id/textViewNume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="NumeProdus"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="170dp"
                app:layout_goneMarginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewPret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="PretPrdous"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewNume"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="MarcaProdus"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewPret"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewRezolutie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="RezolutieProdus"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewMarca"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewNumarExemplare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Numar Exemplare"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewRezolutie"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewNume1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumeProdus1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="170dp"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewPret1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PretProdus1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewNume1"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewMarca1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MarcaProdus1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewPret1"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@drawable/hover4"/>

            <TextView
                android:id="@+id/textViewRezolutie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RezolutieProdus1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewMarca1"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@drawable/hover4"/>

            <Button
                android:id="@+id/buttonAdaugaComanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comanda"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewNumarExemplare"
                android:background="@drawable/hover2"
                android:textColor="@color/lv_row_alb"
                android:textSize="10sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>