<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/seafom"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/angajat_generic_poza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/poza_angajat_generic">
            </ImageView>

            <TextView
                android:id="@+id/textViewNumePozitie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumePozitie"
                app:layout_constraintStart_toEndOf="@id/angajat_generic_poza"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/lv_row_background_produse"/>

            <TextView
                android:id="@+id/textViewDepartament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departament"
                app:layout_constraintStart_toEndOf="@id/angajat_generic_poza"
                app:layout_constraintTop_toBottomOf="@id/textViewNumePozitie"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/lv_row_background_produse"/>

            <TextView
                android:id="@+id/textViewOras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oras"
                app:layout_constraintStart_toEndOf="@id/angajat_generic_poza"
                app:layout_constraintTop_toBottomOf="@id/textViewDepartament"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/lv_row_background_produse"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>